<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/first_fragment">

    <fragment
        android:id="@+id/first_fragment"
        android:name="com.iuturakulov.openweatherapp.view.fragments.WeatherInfoFragment"
        android:label="@string/info_menu_text"
        tools:layout="@layout/fragment_weather_info">
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/second_fragment" />
    </fragment>

    <fragment
        android:id="@+id/second_fragment"
        android:name="com.iuturakulov.openweatherapp.view.fragments.SettingsFragment"
        android:label="@string/settings_menu_text"
        tools:layout="@layout/fragment_settings" />
</navigation>