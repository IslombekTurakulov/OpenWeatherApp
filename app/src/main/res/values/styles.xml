<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/hse_gray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#B6B6B6</item>
        <item name="textColor">@color/hse_gray</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="TextViewDark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/hse_gray</item>
    </style>

    <style name="style_for_search_bar" parent="android:Widget.EditText">
        <item name="android:background">@color/hse_gray</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawableTint">@color/hse_gray</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/hse_gray</item>
        <item name="android:textColorHint">@color/hse_gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>